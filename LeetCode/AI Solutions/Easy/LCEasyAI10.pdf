 class Solution:
    def mergeTwoLists(self, l1: ListNode, l2: ListNode) -> ListNode:
        def merge_helper(l1, l2):
            if not l1 or not l2:
                return l1 or l2
            if l1.val < l2.val:
                l1.next = merge_helper(l1.next, l2)
                return l1
            else:
                l2.next = merge_helper(l1, l2.next)
                return l2

        return merge_helper(l1, l2)
