class Solution:
    def lengthOfLongestSubstring(self, s: str) -> int:
        if not s:
            return 0
        charMap = {}
        left = 0
        max_length = 0
        for right, char in enumerate(s):
            if char in charMap:
                left = max(left, charMap[char] + 1)
            charMap[char] = right
            max_length = max(max_length, right - left + 1)
            if max_length >= len(s) - left:  # Early stopping
                break
        return max_length
